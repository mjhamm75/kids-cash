<div class="container-fluid">
  <h1>Kids</h1>
  <table class="table table-striped" id="kids">
    <thead>
      <tr>
        <th>Name</th>
        <th>Balance</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @kids.each do |kid| %>
      <tr data-link="<%= kid_path(kid) %>">
        <td><%= kid.name %></td>
        <td><%= kid.balance %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br />
  <div class="btn-toolbar">
    <div class="btn-group clearfix">
      <%= button_to 'Add Kid', new_kid_path, method: :get, :class => 'btn btn-large btn-success add-kid-button'%>
    </div>
    <div class="btn-group">
      <button type="button" class="btn btn-large btn-success" id="quick-add-button">Quick Add</button>
    </div>
  </div>
</div>

<div id="quick-add-modal" class="modal hide fade in">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">x</a>
    <h3>Quick Add</h3>
  </div>
  <div class="modal-body">
    <div class="dropdown margin-bottom">
      <a class="btn" data-toggle="dropdown" href="#">Name<b class="caret"></b></a>
      <ul class="dropdown-menu" role="menu">
      <% Kid.all.each do |kid| %>
        <li><a href="#"><%= kid.name %></a></li>
      <% end %>
      </ul>
    </div>
    <div class="field">
      <label for="transaction_amount">Amount</label
      <br>
      <input id="transaction_amount" size="30" type="number"></input>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-success">Quick Add</a>
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
</div>